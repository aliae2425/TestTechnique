<div class="modal-header d-block">
    <div class="d-flex justify-content-between align-items-center">
        <h5 class="modal-title">Statistiques : {{ question.titled }}</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    {% if question.description %}
        <p class="text-muted small mb-0 mt-1">{{ question.description }}</p>
    {% endif %}
</div>
<div class="modal-body">
    {% if noData|default(false) %}
        <div class="alert alert-info">
            Aucune donn√©e de distribution disponible pour cette question.
        </div>
    {% elseif chart is defined and chart %}
        <div style="height: 300px; width: 100%;">
            {{ render_chart(chart) }}
        </div>
    {% else %}
        <div class="alert alert-warning">
            Impossible de charger le graphique.
        </div>
    {% endif %}
</div>
