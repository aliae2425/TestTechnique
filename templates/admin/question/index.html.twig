{# templates/admin/question/index.html.twig #}
{% extends '@EasyAdmin/crud/index.html.twig' %}

{# Vous pouvez surcharger des blocs spécifiques #}
{% block main %}
    <div class="row h-100">
        {# Left Sidebar #}
        <div class="col-md-3 border-end p-4" style="min-height: calc(100vh - 60px);">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h5 class="fw-bold mb-0">Mes Questions <span class="text-primary fs-6">({{ entities|default([])|length }})</span></h5>
                <a href="#" class="text-decoration-none text-primary small"><i class="fas fa-download me-1"></i> Exporter JSON</a>
            </div>
            
            {% if entities is defined and entities|length > 0 %}
                <div class="list-group list-group-flush">
                    {% for entity in entities %}
                        <div class="list-group-item px-0 border-0">
                            <div class="card shadow-sm border-0 ">
                                <div class="card-body p-3">
                                    <h6 class="card-title text-truncate mb-1">{{ entity.instance.titled }}</h6>
                                    <small class="text-muted">{{ entity.instance.type|default('Question') }}</small>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                {# Empty State #}
                <div class="text-center text-muted mt-5 pt-5">
                    <div class="mb-3">
                         <i class="far fa-file fa-3x text-light-gray" style="opacity: 0.3;"></i>
                    </div>
                    <p class="small">Aucune question créée.</p>
                </div>
            {% endif %}
        </div>

        {# Main Content Area #}
        <div class="col-md-9 p-4" >
            <div class="card border-0 shadow-none">
                <div class="card-body p-0">
                    
                    {# Header #}
                    <div class="d-flex justify-content-between align-items-start mb-4 border-bottom pb-4">
                        <div>
                            <h4 class="fw-bold mb-1">Nouvelle Question</h4>
                            <p class="text-muted small mb-0">Remplissez les détails et les 4 réponses obligatoires.</p>
                        </div>
                        <div class="d-flex gap-2">
                            <button class="btn btn-outline-primary rounded-pill px-3 btn-sm">
                                Sujet (ex: JS Async) <i class="fas fa-pen ms-2 small"></i>
                            </button>
                            <button class="btn btn-primary px-4 btn-sm">
                                <i class="fas fa-save me-2"></i> Enregistrer
                            </button>
                        </div>
                    </div>

                    <form>
                        <div class="row mb-5">
                            {# Left Inputs #}
                            <div class="col-md-8">
                                <div class="mb-3">
                                    <label class="form-label fw-bold small">Intitulé de la question <span class="text-danger">*</span></label>
                                    <textarea class="form-control" rows="3" placeholder="Quelle est la capitale..." style="background-color: #2f333a; color: #fff;"></textarea>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label fw-bold small">Description / Contexte</label>
                                    <textarea class="form-control" rows="3" placeholder="Contexte optionnel pour aider à répondre..." style="background-color: #2f333a; color: #fff;"></textarea>
                                </div>
                            </div>
                            
                            {# Right Image Dropzone #}
                            <div class="col-md-4">
                                <label class="form-label fw-bold small">Image illustrative</label>
                                <div class="border rounded p-4 text-center d-flex flex-column justify-content-center align-items-center h-100" style="border: 2px dashed #dee2e6 !important; background-color: #f8f9fa;">
                                    <i class="far fa-image fa-2x text-muted mb-2"></i>
                                    <div class="small text-muted">Glisser une image ou cliquer</div>
                                    <div class="text-muted" style="font-size: 0.7em;">JPG, PNG, WEBP (Max 2MB)</div>
                                </div>
                            </div>
                        </div>

                        {# Answers Section #}
                        <div class="mb-4">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <h5 class="fw-bold mb-0">Réponses (4)</h5>
                                <span class="badge  text-secondary border">Sélectionnez les bonnes réponses</span>
                            </div>

                            <div class="row g-3">
                                {% for letter in ['A', 'B', 'C', 'D'] %}
                                <div class="col-md-6">
                                    <div class="card  border-0">
                                        <div class="card-body">
                                            <div class="d-flex align-items-center mb-2">
                                                <div class="fw-bold text-secondary me-3 fs-5">{{ letter }}</div>
                                                <input type="text" class="form-control border-0 shadow-sm" placeholder="Texte de la réponse">
                                                <div class="form-check ms-3">
                                                    <input class="form-check-input p-2" type="checkbox" style="width: 1.5em; height: 1.5em; border-color: #adb5bd;">
                                                </div>
                                            </div>
                                            <div style="padding-left: 2rem;">
                                                <input type="text" class="form-control form-control-sm border-0 bg-transparent" placeholder="Explication (Pourquoi c'est juste/faux ?)" style="font-size: 0.85rem; border-bottom: 1px dashed #ccc !important; border-radius: 0;">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                {% endfor %}
                            </div>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
{% endblock %}