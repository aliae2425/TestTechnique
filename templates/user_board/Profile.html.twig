{% extends 'base.html.twig' %}

{% block title %}Mon Profil - 418Academy{% endblock %}

{% block body %}
    <div class="min-h-screen bg-slate-50/50 mt-[72px]">
        {# Header / Banner #}
        <div class="relative h-64 bg-slate-200 overflow-hidden">
             {# Fond abstrait ou image #}
            <div class="absolute inset-0 bg-gradient-to-r from-cyan-600 to-blue-600 opacity-90"></div>
            <div class="absolute inset-0 bg-[url('https://www.transparenttextures.com/patterns/cubes.png')] opacity-20"></div>
            
            <div class="absolute bottom-0 left-0 right-0 p-8 bg-gradient-to-t from-slate-900/50 to-transparent">
                <div class="max-w-7xl mx-auto flex items-end gap-6">
                    {# Avatar #}
                    <div class="relative -mb-12">
                        <div class="w-32 h-32 rounded-2xl bg-white p-1 shadow-xl">
                            <div class="w-full h-full rounded-xl bg-gradient-to-br from-slate-100 to-slate-200 flex items-center justify-center text-4xl font-bold text-slate-400">
                                {{ app.user.username|first|upper }}
                            </div>
                        </div>
                        {# Badge Niveau #}
                        <div class="absolute -bottom-2 -right-2 bg-yellow-400 text-yellow-900 text-xs font-bold px-3 py-1 rounded-full shadow-lg border-2 border-white">
                            Lvl. {{ app.user.lvl ?? 1 }}
                        </div>
                    </div>
                    
                    {# Info User #}
                    <div class="text-white mb-2">
                        <h1 class="text-3xl font-bold">{{ app.user.username }}</h1>
                        <p class="text-cyan-100 flex items-center gap-2">
                            <twig:ux:icon name="tabler:mail" class="w-4 h-4" />
                            {{ app.user.email }}
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-16 pb-12">
            <div class="flex flex-col lg:flex-row gap-8">
                {# Sidebar Menu #}
                <aside class="w-full lg:w-64 flex-shrink-0">
                    <div class="bg-white rounded-xl shadow-sm border border-slate-100 sticky top-24 overflow-hidden">
                        <nav class="flex flex-col p-2">
                            <a href="#" class="flex items-center gap-3 px-4 py-3 bg-cyan-50 text-cyan-700 rounded-lg font-medium transition-colors">
                                <twig:ux:icon name="tabler:user" class="w-5 h-5" />
                                Informations
                            </a>
                            <a href="#" class="flex items-center gap-3 px-4 py-3 text-slate-600 hover:bg-slate-50 hover:text-slate-900 rounded-lg font-medium transition-colors">
                                <twig:ux:icon name="tabler:shield-lock" class="w-5 h-5" />
                                Sécurité
                            </a>
                            <a href="#" class="flex items-center gap-3 px-4 py-3 text-slate-600 hover:bg-slate-50 hover:text-slate-900 rounded-lg font-medium transition-colors">
                                <twig:ux:icon name="tabler:bell" class="w-5 h-5" />
                                Notifications
                            </a>
                            <div class="h-px bg-slate-100 my-2 mx-2"></div>
                            <a href="#" class="flex items-center gap-3 px-4 py-3 text-red-600 hover:bg-red-50 rounded-lg font-medium transition-colors">
                                <twig:ux:icon name="tabler:trash" class="w-5 h-5" />
                                Supprimer mon compte
                            </a>
                        </nav>
                    </div>
                </aside>

                {# Main Content #}
                <div class="flex-1 space-y-6">
                    {# Carte Informations Personnelles #}
                    <twig:Card>
                        <twig:Card:Header>
                            <twig:Card:Title>Informations Personnelles</twig:Card:Title>
                            <twig:Card:Description>Gérez vos informations publiques et privées.</twig:Card:Description>
                        </twig:Card:Header>
                        <twig:Card:Content>
                            <form class="space-y-6">
                                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                    <div class="space-y-2">
                                        <twig:Label for="firstname">Prénom</twig:Label>
                                        <twig:Input type="text" id="firstname" value="{{ app.user.name }}" placeholder="Votre prénom" />
                                    </div>
                                    <div class="space-y-2">
                                        <twig:Label for="lastname">Nom</twig:Label>
                                        <twig:Input type="text" id="lastname" value="{{ app.user.lastName }}" placeholder="Votre nom" />
                                    </div>
                                </div>
                                
                                <div class="space-y-2">
                                    <twig:Label for="username">Nom d'utilisateur</twig:Label>
                                    <twig:Input type="text" id="username" value="{{ app.user.username }}" />
                                    <p class="text-xs text-slate-500">C'est le nom qui sera affiché publiquement.</p>
                                </div>

                                <div class="space-y-2">
                                    <twig:Label for="email">Email</twig:Label>
                                    <twig:Input type="email" id="email" value="{{ app.user.email }}" disabled class="bg-slate-50" />
                                    <p class="text-xs text-slate-500">L'adresse email ne peut pas être modifiée directement.</p>
                                </div>
                                
                                <div class="flex justify-end pt-4">
                                    <twig:Button>Enregistrer les modifications</twig:Button>
                                </div>
                            </form>
                        </twig:Card:Content>
                    </twig:Card>

                    {# Carte Statistiques #}
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                        <twig:Card class="md:col-span-1">
                            <twig:Card:Content class="pt-6 text-center">
                                <div class="mb-2 mx-auto w-12 h-12 rounded-full bg-cyan-100 flex items-center justify-center text-cyan-600">
                                    <twig:ux:icon name="tabler:trophy" class="w-6 h-6" />
                                </div>
                                <div class="text-3xl font-bold text-slate-800">{{ app.user.lvl ?? 1 }}</div>
                                <div class="text-xs font-semibold text-slate-500 uppercase tracking-wider">Niveau Actuel</div>
                            </twig:Card:Content>
                        </twig:Card>
                        
                         <twig:Card class="md:col-span-1">
                            <twig:Card:Content class="pt-6 text-center">
                                <div class="mb-2 mx-auto w-12 h-12 rounded-full bg-blue-100 flex items-center justify-center text-blue-600">
                                    <twig:ux:icon name="tabler:star" class="w-6 h-6" />
                                </div>
                                <div class="text-3xl font-bold text-slate-800">{{ 0 }}</div> 
                                {# XP Placeholder car pas de champ XP dans l'entité #}
                                <div class="text-xs font-semibold text-slate-500 uppercase tracking-wider">Points d'XP</div>
                            </twig:Card:Content>
                        </twig:Card>

                         <twig:Card class="md:col-span-1">
                            <twig:Card:Content class="pt-6 text-center">
                                <div class="mb-2 mx-auto w-12 h-12 rounded-full bg-purple-100 flex items-center justify-center text-purple-600">
                                    <twig:ux:icon name="tabler:brain" class="w-6 h-6" />
                                </div>
                                <div class="text-3xl font-bold text-slate-800">{{ app.user.quizSessions|length }}</div>
                                <div class="text-xs font-semibold text-slate-500 uppercase tracking-wider">Quiz Complétés</div>
                            </twig:Card:Content>
                        </twig:Card>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}