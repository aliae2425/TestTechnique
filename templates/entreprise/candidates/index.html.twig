{% extends 'base/base.html.twig' %}

{% block title %}Candidats — {{ company.name }}{% endblock %}

{% block body %}
<div class="min-h-screen bg-slate-50/50 pt-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-10">

        {# Header #}
        <div class="flex items-center justify-between mb-8">
            <div>
                <h1 class="text-2xl font-bold text-slate-900">Candidats</h1>
                <p class="text-sm text-slate-500 mt-1">
                    {{ company.name }} · {{ invitations|length }} candidat{{ invitations|length > 1 ? 's' : '' }}
                </p>
            </div>
            <button type="button" onclick="openInviteModal()"
                    class="inline-flex items-center gap-2 px-4 py-2.5 bg-cyan-600 text-white text-sm font-semibold rounded-xl hover:bg-cyan-700 transition-colors shadow-sm">
                <twig:ux:icon name="tabler:send" class="w-4 h-4" />
                Lancer un test
            </button>
        </div>

        {# Flash messages #}
        {% for message in app.flashes('success') %}
            <div class="mb-6 flex items-center gap-3 p-4 bg-green-50 border border-green-200 rounded-xl text-sm text-green-800">
                <twig:ux:icon name="tabler:circle-check" class="w-5 h-5 flex-shrink-0 text-green-600" />
                {{ message }}
            </div>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <div class="mb-6 flex items-center gap-3 p-4 bg-red-50 border border-red-200 rounded-xl text-sm text-red-800">
                <twig:ux:icon name="tabler:alert-circle" class="w-5 h-5 flex-shrink-0 text-red-500" />
                {{ message }}
            </div>
        {% endfor %}

        {% if invitations is empty %}
            <div class="bg-white rounded-2xl border border-slate-100 shadow-sm p-16 text-center">
                <div class="w-16 h-16 rounded-full bg-slate-100 flex items-center justify-center mx-auto mb-4">
                    <twig:ux:icon name="tabler:users" class="w-8 h-8 text-slate-400" />
                </div>
                <h3 class="text-lg font-semibold text-slate-700 mb-1">Aucun candidat</h3>
                <p class="text-sm text-slate-500 mb-6">Lancez votre premier test pour commencer à recevoir des résultats.</p>
                <button type="button" onclick="openInviteModal()"
                        class="inline-flex items-center gap-2 px-4 py-2 bg-cyan-600 text-white text-sm font-semibold rounded-xl hover:bg-cyan-700 transition-colors">
                    <twig:ux:icon name="tabler:send" class="w-4 h-4" />
                    Lancer un test
                </button>
            </div>
        {% else %}
            <div class="bg-white rounded-2xl border border-slate-100 shadow-sm overflow-hidden">
                <table class="w-full text-sm">
                    <thead>
                        <tr class="border-b border-slate-100 bg-slate-50/70">
                            <th class="text-left px-5 py-3.5 font-semibold text-slate-600">Candidat</th>
                            <th class="text-left px-5 py-3.5 font-semibold text-slate-600">Quiz</th>
                            <th class="text-left px-5 py-3.5 font-semibold text-slate-600">Résultat</th>
                            <th class="text-left px-5 py-3.5 font-semibold text-slate-600">Durée</th>
                            <th class="text-left px-5 py-3.5 font-semibold text-slate-600">Statut</th>
                            <th class="text-left px-5 py-3.5 font-semibold text-slate-600">Date</th>
                            <th class="text-right px-5 py-3.5 font-semibold text-slate-600">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-slate-50">
                        {% for invitation in invitations %}
                            {% set session = invitation.quizSession %}
                            {% set isCompleted = session and session.endAt is not null %}
                            {% set isStarted = session is not null %}

                            {# Resolve candidate name #}
                            {% if session and session.participantName %}
                                {% set candidateName = session.participantName %}
                            {% elseif invitation.prenom or invitation.nom %}
                                {% set candidateName = (invitation.prenom ~ ' ' ~ invitation.nom)|trim %}
                            {% else %}
                                {% set candidateName = 'Anonyme' %}
                            {% endif %}

                            <tr class="hover:bg-slate-50/50 transition-colors">

                                {# Candidat #}
                                <td class="px-5 py-4">
                                    <div class="flex items-center gap-3">
                                        <div class="w-8 h-8 rounded-full bg-cyan-100 flex items-center justify-center flex-shrink-0">
                                            <span class="text-xs font-bold text-cyan-700 uppercase">
                                                {{ candidateName|first }}
                                            </span>
                                        </div>
                                        <div>
                                            <p class="font-medium text-slate-800">{{ candidateName }}</p>
                                            {% if invitation.email %}
                                                <p class="text-xs text-slate-400">{{ invitation.email }}</p>
                                            {% else %}
                                                <span class="text-xs text-slate-300 italic">
                                                    {% if invitation.type == 'link' %}Lien multi-usage{% endif %}
                                                </span>
                                            {% endif %}
                                        </div>
                                    </div>
                                </td>

                                {# Quiz #}
                                <td class="px-5 py-4">
                                    {% if invitation.quizTemplate %}
                                        <p class="font-medium text-slate-700">{{ invitation.quizTemplate.titre }}</p>
                                        <p class="text-xs text-slate-400 mt-0.5">{{ invitation.quizTemplate.type }}</p>
                                    {% else %}
                                        <span class="text-slate-400 italic text-xs">—</span>
                                    {% endif %}
                                </td>

                                {# Résultat #}
                                <td class="px-5 py-4">
                                    {% if isCompleted and session.finalScore is not null %}
                                        {% set score = session.finalScore %}
                                        {% set totalAnswered = session.userReponses|length %}
                                        <div class="flex items-center gap-2">
                                            <span class="text-lg font-bold {% if score >= totalAnswered * 0.7 %}text-green-600{% elseif score >= totalAnswered * 0.4 %}text-amber-600{% else %}text-red-500{% endif %}">
                                                {{ score|number_format(0) }}
                                            </span>
                                            <span class="text-xs text-slate-400 font-medium">bonnes rép.</span>
                                        </div>
                                    {% else %}
                                        <span class="text-slate-300 text-xs italic">—</span>
                                    {% endif %}
                                </td>

                                {# Durée #}
                                <td class="px-5 py-4 text-slate-500 text-xs">
                                    {% if isCompleted %}
                                        {{ session.durationString }}
                                    {% else %}
                                        <span class="text-slate-300 italic">—</span>
                                    {% endif %}
                                </td>

                                {# Statut #}
                                <td class="px-5 py-4">
                                    {% if isCompleted %}
                                        <span class="inline-flex items-center gap-1 px-2.5 py-1 rounded-full text-xs font-medium bg-green-100 text-green-700">
                                            <twig:ux:icon name="tabler:circle-check" class="w-3 h-3" />
                                            Terminé
                                        </span>
                                    {% elseif isStarted %}
                                        <span class="inline-flex items-center gap-1 px-2.5 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-700">
                                            <twig:ux:icon name="tabler:clock-play" class="w-3 h-3" />
                                            En cours
                                        </span>
                                    {% elseif invitation.isExpired() %}
                                        <span class="inline-flex items-center gap-1 px-2.5 py-1 rounded-full text-xs font-medium bg-slate-100 text-slate-500">
                                            <twig:ux:icon name="tabler:clock-off" class="w-3 h-3" />
                                            Expiré
                                        </span>
                                    {% else %}
                                        <span class="inline-flex items-center gap-1 px-2.5 py-1 rounded-full text-xs font-medium bg-amber-100 text-amber-700">
                                            <twig:ux:icon name="tabler:clock" class="w-3 h-3" />
                                            En attente
                                        </span>
                                    {% endif %}
                                </td>

                                {# Date #}
                                <td class="px-5 py-4 text-slate-500 text-xs">
                                    {% if isStarted %}
                                        {{ session.startAt|date('d/m/Y') }}<br>
                                        <span class="text-slate-400">{{ session.startAt|date('H:i') }}</span>
                                    {% else %}
                                        {{ invitation.createdAt|date('d/m/Y') }}
                                    {% endif %}
                                </td>

                                {# Actions #}
                                <td class="px-5 py-4 text-right">
                                    {% if isCompleted %}
                                        <a href="{{ path('business_candidate_detail', {id: invitation.id}) }}"
                                           class="inline-flex items-center gap-1.5 px-3 py-1.5 text-xs font-medium text-cyan-700 border border-cyan-200 rounded-lg hover:bg-cyan-50 transition-colors">
                                            <twig:ux:icon name="tabler:chart-bar" class="w-3.5 h-3.5" />
                                            Voir les résultats
                                        </a>
                                    {% else %}
                                        <span class="text-xs text-slate-300 italic">Pas encore disponible</span>
                                    {% endif %}
                                </td>

                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% endif %}

    </div>
</div>
{% endblock %}
