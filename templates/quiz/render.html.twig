{% extends 'base.html.twig' %}

{% block title %}Quiz - {{ quiz.Titre }}{% endblock %}

{% block body %}
    <div class="min-h-screen bg-slate-50 pt-24 pb-12" data-controller="quiz">
        <div class="container mx-auto px-4 max-w-4xl">
            {# Header #}
            <div class="mb-8 text-center">
                <h1 class="text-3xl font-bold text-slate-800 mb-2">{{ quiz.Titre }}</h1>
                <div class="flex items-center justify-center space-x-4 text-slate-600">
                    <span class="bg-indigo-100 text-indigo-700 px-3 py-1 rounded-full text-sm font-medium">{{ quiz.Mode }}</span>
                    <span class="text-sm" data-quiz-target="counter">Chargement...</span>
                </div>
            </div>

            {# Progress Bar #}
            <div class="w-full bg-slate-200 rounded-full h-2.5 mb-8">
                <div class="bg-indigo-600 h-2.5 rounded-full transition-all duration-300" style="width: 0%" data-quiz-target="progress"></div>
            </div>

            {# Form #}
            <form action="{{ path('app_quiz_start', {id: quiz.id}) }}" method="POST" data-turbo="false">
                <div class="relative min-h-[400px]">
                    {% for question in questions %}
                        <div class="hidden transition-opacity duration-300" data-quiz-target="slide">
                            <div class="bg-white rounded-2xl shadow-xl p-8 border border-white/50 backdrop-blur-sm">
                                <div class="flex justify-between items-start mb-6">
                                    <h2 class="text-xl font-semibold text-slate-800">{{ question.titled }}</h2>
                                    <span class="bg-slate-100 text-slate-600 px-2 py-1 rounded text-xs font-medium uppercase tracking-wider">{{ question.level }}</span>
                                </div>

                                {% if question.Description %}
                                    <div class="prose text-slate-600 mb-6">
                                        {{ question.Description|raw }}
                                    </div>
                                {% endif %}
                                
                                {% if question.image %}
                                     <div class="mb-6 rounded-lg overflow-hidden border border-slate-200">
                                        <img src="{{ asset('uploads/images/questions/' ~ question.image) }}" alt="{{ question.titled }}" class="w-full h-auto max-h-64 object-cover">
                                    </div>
                                {% endif %}

                                <div class="space-y-3">
                                    {% for answer in question.Reponses %}
                                        <label class="flex items-start p-4 border border-slate-200 rounded-xl cursor-pointer hover:bg-indigo-50 hover:border-indigo-200 transition-colors group">
                                            <div class="flex items-center h-5">
                                                {# Use checkbox for multiple correct answers logic, simplified here as radio for single choice feeling, or adjust based on logic. 
                                                   Can be enhanced later to detect single/multiple mode. Defaults to checkbox for flexibility. #}
                                                <input type="checkbox" name="q_{{ question.id }}[]" value="{{ answer.id }}" class="w-4 h-4 text-indigo-600 border-slate-300 rounded focus:ring-indigo-500">
                                            </div>
                                            <div class="ml-3 text-sm">
                                                <span class="font-medium text-slate-700 group-hover:text-indigo-700">{{ answer.text }}</span>
                                            </div>
                                        </label>
                                    {% else %}
                                        <p class="text-sm text-slate-500 italic">Aucune réponse disponible.</p>
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                    {% else %}
                        <div class="text-center py-12">
                            <p class="text-xl text-slate-600">Aucune question n'a été trouvée pour ce quiz.</p>
                        </div>
                    {% endfor %}
                </div>

                {# Navigation #}
                <div class="flex justify-between items-center mt-8">
                    <button type="button" 
                            class="px-6 py-2 border border-slate-300 rounded-lg text-slate-600 hover:bg-slate-50 font-medium transition-colors invisible" 
                            data-action="quiz#previous" 
                            data-quiz-target="prevButton">
                        Précédent
                    </button>
                    
                    <button type="button" 
                            class="px-6 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 shadow-lg shadow-indigo-200 font-medium transition-colors" 
                            data-action="quiz#next" 
                            data-quiz-target="nextButton">
                        Suivant
                    </button>
                    
                    <button type="submit" 
                            class="hidden px-6 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 shadow-lg shadow-green-200 font-medium transition-colors" 
                            data-quiz-target="submitButton">
                        Terminer le Quiz
                    </button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
