{% extends 'base/base.html.twig' %}

{% block title %}Mon Profil - 418Academy{% endblock %}

{% block body %}
    <div class="min-h-screen bg-slate-50/50 ">
        {# Header / Banner #}
        <div class="h-[350px] w-full relative overflow-hidden">
            <img src="{{ asset('images/profile_banner.png') }}" class="w-full h-full object-cover" alt="Banner">
            <div class="absolute inset-0 bg-black/10"></div>
        </div>

        {# Frost Glass Header Card #}
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 -mt-24 relative z-10 mb-8">
            <div class="bg-white/30 backdrop-blur-md border border-white/20 shadow-xl rounded-xl p-6">
                <div class="flex flex-col md:flex-row items-end gap-6">
                    
                    {# Avatar #}
                    <div class="relative -mt-20 flex-shrink-0">
                         <div class="w-36 h-36 rounded-full border-4 border-white shadow-2xl flex items-center justify-center overflow-hidden bg-slate-400">
                             <span class="text-5xl font-bold text-white">{{ app.user.username|first|upper }}</span>
                         </div>
                    </div>

                    {# Info #}
                    <div class="flex-1 pb-2">
                        <h1 class="text-3xl font-bold text-slate-900">{{ app.user.username }}</h1>
                        <p class="font-medium text-slate-700 flex items-center gap-2">
                            {{ app.user.email }}
                        </p>
                    </div>

                    {# Gamification #}
                    <div class="pb-2 w-full md:w-auto">
                        <div class="flex items-center gap-5">
                            <div class="flex-1 md:min-w-[300px]">
                                <div class="flex justify-between mb-1">
                                    <span class="text-sm font-semibold text-slate-800">XP</span>
                                    <span class="text-sm text-slate-800">{{ app.user.xp - app.user.xpForCurrentLevel }} / {{ app.user.xpForNextLevel - app.user.xpForCurrentLevel }}</span>
                                </div>
                                <div class="w-full bg-white/50 rounded-full h-3 backdrop-blur-sm overflow-hidden">
                                    <div class="bg-cyan-600 h-full rounded-full transition-all duration-300"
                                            style="width: {{ app.user.levelsProgress }}%">
                                    </div>
                                </div>
                            </div>
                            <div class="relative">
                                <div class="w-14 h-14 rounded-full bg-cyan-100 flex items-center justify-center shadow-md">
                                    <span class="text-cyan-700 font-bold text-lg">
                                        {{ app.user.lvl ?? 1 }}
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {# Main Content #}
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-16 pb-12">
            <div class="flex flex-col lg:flex-row gap-8">
                {# Sidebar Menu #}
                <aside class="w-full lg:w-64 flex-shrink-0">
                    <div class="bg-white rounded-xl shadow-sm border border-slate-100 sticky top-24 overflow-hidden">
                        <nav class="flex flex-col p-2">
                            <a href="{{ path('app_user_profile') }}" class="flex items-center gap-3 px-4 py-3 {{ app.request.attributes.get('_route') == 'app_user_profile' ? 'bg-cyan-50 text-cyan-700' : 'text-slate-600 hover:bg-slate-50 hover:text-slate-900' }} rounded-lg font-medium transition-colors">
                                <twig:ux:icon name="tabler:user" class="w-5 h-5" />
                                Informations Personnelles
                            </a>
                            {% if is_granted('ROLE_ENTREPRISE_ADMIN') %}
                            <a href="{{ path('business_profile') }}" class="flex items-center gap-3 px-4 py-3 {{ app.request.attributes.get('_route') == 'business_profile' ? 'bg-cyan-50 text-cyan-700' : 'text-slate-600 hover:bg-slate-50 hover:text-slate-900' }} rounded-lg font-medium transition-colors">
                                <twig:ux:icon name="tabler:building" class="w-5 h-5" />
                                Profil Entreprise
                            </a>
                            {% endif %}
                            <a href="#" class="flex items-center gap-3 px-4 py-3 text-slate-600 hover:bg-slate-50 hover:text-slate-900 rounded-lg font-medium transition-colors">
                                <twig:ux:icon name="tabler:shield-lock" class="w-5 h-5" />
                                Sécurité
                            </a>
                            <a href="#" class="flex items-center gap-3 px-4 py-3 text-slate-600 hover:bg-slate-50 hover:text-slate-900 rounded-lg font-medium transition-colors">
                                <twig:ux:icon name="tabler:bell" class="w-5 h-5" />
                                Notifications
                            </a>
                            <div class="h-px bg-slate-100 my-2 mx-2"></div>
                            <a href="#" class="flex items-center gap-3 px-4 py-3 text-red-600 hover:bg-red-50 rounded-lg font-medium transition-colors">
                                <twig:ux:icon name="tabler:trash" class="w-5 h-5" />
                                Supprimer mon compte
                            </a>
                        </nav>
                    </div>
                </aside>

                {# Main Content #}
                <div class="flex-1 space-y-6">

                    {% block main_content %}
                        {# Carte Statistiques #}
                        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                            <twig:Card class="md:col-span-1">
                                <twig:Card:Content class="pt-6 text-center">
                                    <div class="mb-2 mx-auto w-12 h-12 rounded-full bg-cyan-100 flex items-center justify-center text-cyan-600">
                                        <twig:ux:icon name="tabler:badges" class="w-6 h-6" />
                                    </div>
                                    <div class="text-3xl font-bold text-slate-800">{{ 0 }}</div>
                                    <div class="text-xs font-semibold text-slate-500 uppercase tracking-wider">Badges</div>
                                </twig:Card:Content>
                            </twig:Card>
                            
                            <twig:Card class="md:col-span-1">
                                <twig:Card:Content class="pt-6 text-center">
                                    <div class="mb-2 mx-auto w-12 h-12 rounded-full bg-blue-100 flex items-center justify-center text-blue-600">
                                        <twig:ux:icon name="tabler:trophy" class="w-6 h-6" />
                                    </div>
                                    <div class="text-3xl font-bold text-slate-800">{{ 0 }}</div> 
                                    <div class="text-xs font-semibold text-slate-500 uppercase tracking-wider">Trophées</div>
                                </twig:Card:Content>
                            </twig:Card>

                            <twig:Card class="md:col-span-1">
                                <twig:Card:Content class="pt-6 text-center">
                                    <div class="mb-2 mx-auto w-12 h-12 rounded-full bg-purple-100 flex items-center justify-center text-purple-600">
                                        <twig:ux:icon name="tabler:brain" class="w-6 h-6" />
                                    </div>
                                    <div class="text-3xl font-bold text-slate-800">{{ app.user.quizSessions|length }}</div>
                                    <div class="text-xs font-semibold text-slate-500 uppercase tracking-wider">Cours complétés</div>
                                </twig:Card:Content>
                            </twig:Card>
                        </div>

                        {# Carte Informations Personnelles #}
                        <twig:Card>
                            <twig:Card:Header>
                                <twig:Card:Title>Informations Personnelles</twig:Card:Title>
                                <twig:Card:Description>Gérez vos informations publiques et privées.</twig:Card:Description>
                            </twig:Card:Header>
                            <twig:Card:Content>
                                {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
                                    
                                    {% for message in app.flashes('success') %}
                                        <div class="p-4 mb-4 text-sm text-green-800 rounded-lg bg-green-50 dark:bg-gray-800 dark:text-green-400" role="alert">
                                            <span class="font-medium">Succès !</span> {{ message }}
                                        </div>
                                    {% endfor %}

                                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                        <div class="space-y-2">
                                            <twig:Label for="{{ form.name.vars.id }}">{{ form.name.vars.label }}</twig:Label>
                                            {{ form_widget(form.name, {'attr': {'class': 'flex h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-sm ring-offset-background file:border-0 file:bg-transparent file:text-sm file:font-medium placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50', 'placeholder': 'Votre prénom'}}) }}
                                            <div class="text-[0.8rem] text-muted-foreground">
                                                {{ form_errors(form.name) }}
                                            </div>
                                        </div>
                                        <div class="space-y-2">
                                            <twig:Label for="{{ form.lastName.vars.id }}">{{ form.lastName.vars.label }}</twig:Label>
                                            {{ form_widget(form.lastName, {'attr': {'class': 'flex h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-sm ring-offset-background file:border-0 file:bg-transparent file:text-sm file:font-medium placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50', 'placeholder': 'Votre nom'}}) }}
                                            <div class="text-[0.8rem] text-muted-foreground">
                                                {{ form_errors(form.lastName) }}
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <div class="space-y-2">
                                        <twig:Label for="{{ form.username.vars.id }}">{{ form.username.vars.label }}</twig:Label>
                                        {{ form_widget(form.username, {'attr': {'class': 'flex h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-sm ring-offset-background file:border-0 file:bg-transparent file:text-sm file:font-medium placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50'}}) }}
                                        <p class="text-xs text-slate-500">C'est le nom qui sera affiché publiquement.</p>
                                        <div class="text-[0.8rem] text-muted-foreground">
                                            {{ form_errors(form.username) }}
                                        </div>
                                    </div>
                                    
                                    <div class="flex justify-end pt-4">
                                        <twig:Button type="submit">Enregistrer les modifications</twig:Button>
                                    </div>
                                {{ form_end(form) }}
                            </twig:Card:Content>
                        </twig:Card>
                    
                    {% endblock %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}